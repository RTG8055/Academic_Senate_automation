
@model ASRAS.Models.FormModal

@{
    Layout = null;
}
@{ 
    var Ins_id = (Double)Session["Ins_id"];
}

@Html.DropDownListFor(model => model.proposal.Dept,
    Model.departmentViewModal.DepartmentIEnum, 
    "Select Department",
    new { @id = "Department_DropDownId", @class = "Department_DropDownClass"})

<script type="text/javascript">
    $(function () {
        $('#Department_DropDownId').change(function () {
            //var selectedInstituteId = $('#Institute_DropDownId option:selected').val();
            var selectedDepartmentId = this.value;
            $('#CourseContainer').load('@Url.Action("CourseView")?InstituteID=' + @Ins_id + '&DeptID=' + selectedDepartmentId);

            $('#SemesterContainer').load('@Url.Action("SemesterView")');
            $('#SubjectContainer').load('@Url.Action("SubjectView")');
            $('input[name="Subjects"').attr('checked', false);
        });
    });
</script>