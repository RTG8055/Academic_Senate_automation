    var Uname2 = (string)Session["UserName"];
    var Name = (string)Session["Name"];
}

<!DOCTYPE html>

<html>
<head>
    <script>//var Uname2 = Session["UserName"]</script>
    <title>Home</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">
    <title>Cover Template for Bootstrap</title>
    <!-- Bootstrap core CSS -->
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet">
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <link href="@Url.Content("~/Content/css/ie10-viewport-bug-workaround.css")" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="@Url.Content("~/Content/cover.css")" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/cover.css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Just for debugging purposes. Don't actually copy these 2 lines! -->
    <!--[if lt IE 9]><script src="../../assets/js/ie8-responsive-file-warning.js"></script><![endif]-->
    <script src="@Url.Content("~/Content/js/ie-emulation-modes-warning.js")"></script>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body background="~/Content/images/manipal.jpg">
    @RenderBody()
    <div class="site-wrapper">
        <div class="site-wrapper-inner">
            <div class="cover-container">
                <div class="masthead clearfix" style="width:1000px;">
                    <div class="inner">
                        <h3 class="masthead-brand" >Academic Senate</h3>
                        <nav>
                            <ul class="nav masthead-nav">
                                <li>
                                    <a onclick="location.href='@Url.Action("Index", "Main")'">
                                        <span class="glyphicon glyphicon-home"
                                              aria-hidden="true"></span> Home
                                    </a>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                                       role="button" aria-haspopup="true" aria-expanded="false">
                                        <span class="glyphicon glyphicon-plus"
                                              aria-hidden="true"></span>
                                        Create Proposal <span class="caret"></span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a onclick="location.href='@Url.Action("Index", "ChangeInCurriculum")'">Change in Curriculum</a></li>
                                        <li><a onclick="location.href='@Url.Action("Index", "ChangeInRegulations")'">Change in Regulations</a></li>
                                        <li><a onclick="location.href='@Url.Action("Index", "ChangeInCourseStructure")'">Change in Course Structure</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a onclick="location.href='@Url.Action("GetProposals", "Main")'">
                                        <span class="glyphicon glyphicon-list"
                                              aria-hidden="true"></span> View Proposals
                                    </a>
                                </li>
                                <li>
                                    <a onclick="location.href='@Url.Action("Login", "Login")'">
                                        <span class="glyphicon glyphicon-log-out"
                                              aria-hidden="true"></span> Logout
                                    </a>
                                    </li>
                            </ul>
                        </nav>
                    </div>
                </div>
                <div class="inner cover">
                    <h1 class="cover-heading">Welcome @Name</h1>
                    <p class="lead">Do something about the button</p>
                    <p class="lead">
                        <a href="#" class="btn btn-lg btn-default">Learn more</a>
                    </p>
                </div>
                <div class="mastfoot">
                    <div class="inner">
                        <p>Manipal University - Academic Senate Report Automation System</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="@Url.Content("~/Content/js/vendor/jquery.min.js")" ><\/script>')</script>
    <script src="@Url.Content("~/Content/dist/js/bootstrap.min.js")"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="@Url.Content("~/Content/js/ie10-viewport-bug-workaround.js")"></script>
</body>

</html>
