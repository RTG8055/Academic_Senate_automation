<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a onclick="location.href='@Url.Action("Index", "Main")'">
                            <span class="glyphicon glyphicon-home"
                                  aria-hidden="true"></span> Home
                        </a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                           role="button" aria-haspopup="true" aria-expanded="false">
                            <span class="glyphicon glyphicon-plus"
                                  aria-hidden="true"></span>
                            Create Proposal <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a onclick="location.href='@Url.Action("Index", "ChangeInCurriculum")'">Change in Curriculum</a></li>
                            <li><a onclick="location.href='@Url.Action("Index", "ChangeInCurriculum")'">Change in Regulations</a></li>
                            <li><a onclick="location.href='@Url.Action("Index", "ChangeInCurriculum")'">Change in Course Structure</a></li>
                        </ul>
                    </li>
                    <li>
                        <a onclick="location.href='@Url.Action("Index", "Main")'">
                            <span class="glyphicon glyphicon-list"
                                  aria-hidden="true"></span> View Proposals
                        </a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a onclick="location.href='@Url.Action("Login", "Login")'">
                            <span class="glyphicon glyphicon-log-out"
                                  aria-hidden="true"></span> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" >
        @RenderBody()
        <hr />
        <footer>
            <p>Manipal University - Academic Senate Report Automation System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/index.js"></script>
    @RenderSection("scripts", required: false)
</body>

</html>
